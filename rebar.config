{erl_opts, [{platform_define, "^17", 'SLOW_MAPS'}]}. % Erlang 17

{eunit_opts, [verbose]}.

{cover_enabled, true}.
{cover_print_enabled, true}.

{profiles, [
    {test, [
        {deps, [
            {erlexec, {git, "https://github.com/chicagoboss-with-deps/erlexec.git", {ref, "576fb5d"}}}
        ]}
    ]},
    {lint, [
        {plugins, [rebar3_lint]}
    ]}
]}.

{ct_opts, [
    {ct_hooks, [epgsql_cth]}
]}.

{elvis,
  [#{dirs => ["src", "src/*"],
     include_dirs => ["include"],
     filter => "*.erl",
     ruleset => erl_files,
     rules =>
         [{elvis_style, line_length, #{limit => 120}},
          {elvis_style, god_modules, #{limit => 40}},
          {elvis_style, state_record_and_type, disable} % epgsql_sock
         ]}
  ]
 }.
